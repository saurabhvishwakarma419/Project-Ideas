import React, { useState, useEffect } from 'react';
import { BookOpen, Brain, TrendingUp, Award, Clock, Target, CheckCircle, XCircle, AlertCircle, Sparkles } from 'lucide-react';

const AITutor = () => {
  const [student, setStudent] = useState({
    name: '',
    level: 'beginner',
    subjects: [],
    learningPace: 'moderate',
    strengths: [],
    weaknesses: []
  });
  
  const [currentSubject, setCurrentSubject] = useState('mathematics');
  const [sessionActive, setSessionActive] = useState(false);
  const [question, setQuestion] = useState(null);
  const [userAnswer, setUserAnswer] = useState('');
  const [feedback, setFeedback] = useState(null);
  const [loading, setLoading] = useState(false);
  const [stats, setStats] = useState({
    questionsAnswered: 0,
    correctAnswers: 0,
    averageTime: 0,
    currentStreak: 0
  });
  const [questionStartTime, setQuestionStartTime] = useState(null);
  const [showPersonalization, setShowPersonalization] = useState(true);
  const [recommendations, setRecommendations] = useState([]);

  const subjects = ['Mathematics', 'Science', 'History', 'Literature', 'Programming'];
  const difficultyLevels = ['beginner', 'intermediate', 'advanced'];

  const startSession = () => {
    if (!student.name || student.subjects.length === 0) {
      alert('Please complete your profile first');
      return;
    }
    setShowPersonalization(false);
    setSessionActive(true);
    generateQuestion();
  };

  const generateQuestion = async () => {
    setLoading(true);
    setQuestionStartTime(Date.now());
    
    const studentProfile = `
      Student Level: ${student.level}
      Learning Pace: ${student.learningPace}
      Recent Performance: ${stats.correctAnswers}/${stats.questionsAnswered} correct
      ${student.weaknesses.length > 0 ? `Areas needing improvement: ${student.weaknesses.join(', ')}` : ''}
    `;

    try {
      const response = await fetch('https://api.anthropic.com/v1/messages', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'claude-sonnet-4-20250514',
          max_tokens: 1000,
          messages: [{
            role: 'user',
            content: `You are an adaptive AI tutor. Generate ONE practice question for a student studying ${currentSubject}.

${studentProfile}

Respond ONLY with a JSON object (no markdown, no backticks) in this exact format:
{
  "question": "the question text",
  "difficulty": "beginner/intermediate/advanced",
  "hint": "a helpful hint",
  "correctAnswer": "the correct answer",
  "explanation": "why this is correct"
}`
          }]
        })
      });

      const data = await response.json();
      const content = data.content[0].text.trim();
      const parsed = JSON.parse(content);
      
      setQuestion(parsed);
      setUserAnswer('');
      setFeedback(null);
    } catch (error) {
      console.error('Error generating question:', error);
      setQuestion({
        question: "What is 15 + 27?",
        difficulty: "beginner",
        hint: "Break it down: 15 + 20 = 35, then add 7",
        correctAnswer: "42",
        explanation: "15 + 27 = 42"
      });
    }
    
    setLoading(false);
  };

  const submitAnswer = async () => {
    if (!userAnswer.trim()) return;
    
    setLoading(true);
    const timeSpent = Math.floor((Date.now() - questionStartTime) / 1000);
    
    try {
      const response = await fetch('https://api.anthropic.com/v1/messages', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'claude-sonnet-4-20250514',
          max_tokens: 1000,
          messages: [{
            role: 'user',
            content: `You are an adaptive AI tutor providing personalized feedback.

Question: ${question.question}
Correct Answer: ${question.correctAnswer}
Student's Answer: ${userAnswer}
Student Level: ${student.level}
Time Spent: ${timeSpent} seconds

Evaluate if the student's answer is correct (be flexible with formatting/phrasing). Respond ONLY with a JSON object (no markdown, no backticks):
{
  "isCorrect": true/false,
  "feedback": "personalized encouraging feedback",
  "suggestion": "specific suggestion for improvement or next steps",
  "conceptToReview": "concept name if incorrect, empty string if correct"
}`
          }]
        })
      });

      const data = await response.json();
      const content = data.content[0].text.trim();
      const result = JSON.parse(content);
      
      setFeedback(result);
      
      // Update stats
      const newStats = {
        questionsAnswered: stats.questionsAnswered + 1,
        correctAnswers: stats.correctAnswers + (result.isCorrect ? 1 : 0),
        averageTime: Math.floor((stats.averageTime * stats.questionsAnswered + timeSpent) / (stats.questionsAnswered + 1)),
        currentStreak: result.isCorrect ? stats.currentStreak + 1 : 0
      };
      setStats(newStats);
      
      // Update weaknesses
      if (!result.isCorrect && result.conceptToReview) {
        if (!student.weaknesses.includes(result.conceptToReview)) {
          setStudent(prev => ({
            ...prev,
            weaknesses: [...prev.weaknesses, result.conceptToReview]
          }));
        }
      }
      
      // Adapt difficulty based on performance
      if (newStats.questionsAnswered >= 3) {
        const accuracy = newStats.correctAnswers / newStats.questionsAnswered;
        if (accuracy > 0.8 && student.level === 'beginner') {
          setStudent(prev => ({ ...prev, level: 'intermediate' }));
        } else if (accuracy > 0.8 && student.level === 'intermediate') {
          setStudent(prev => ({ ...prev, level: 'advanced' }));
        } else if (accuracy < 0.4 && student.level === 'advanced') {
          setStudent(prev => ({ ...prev, level: 'intermediate' }));
        } else if (accuracy < 0.4 && student.level === 'intermediate') {
          setStudent(prev => ({ ...prev, level: 'beginner' }));
        }
      }
      
    } catch (error) {
      console.error('Error evaluating answer:', error);
      setFeedback({
        isCorrect: userAnswer.toLowerCase().includes(question.correctAnswer.toLowerCase()),
        feedback: "Answer submitted! Keep practicing.",
        suggestion: "Review the explanation below.",
        conceptToReview: ""
      });
    }
    
    setLoading(false);
  };

  const getRecommendations = async () => {
    if (student.weaknesses.length === 0) return;
    
    setLoading(true);
    
    try {
      const response = await fetch('https://api.anthropic.com/v1/messages', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'claude-sonnet-4-20250514',
          max_tokens: 1000,
          messages: [{
            role: 'user',
            content: `You are an adaptive AI tutor recommending personalized learning resources.

Student Profile:
- Level: ${student.level}
- Subject: ${currentSubject}
- Weak Areas: ${student.weaknesses.join(', ')}
- Performance: ${stats.correctAnswers}/${stats.questionsAnswered} correct

Provide 3 specific recommendations. Respond ONLY with a JSON array (no markdown, no backticks):
[
  {
    "title": "recommendation title",
    "description": "what to focus on",
    "type": "practice/review/concept"
  }
]`
          }]
        })
      });

      const data = await response.json();
      const content = data.content[0].text.trim();
      const recs = JSON.parse(content);
      setRecommendations(recs);
    } catch (error) {
      console.error('Error getting recommendations:', error);
      setRecommendations([
        { title: "Review Basics", description: "Strengthen foundational concepts", type: "review" },
        { title: "Practice Problems", description: "Apply what you've learned", type: "practice" }
      ]);
    }
    
    setLoading(false);
  };

  useEffect(() => {
    if (stats.questionsAnswered > 0 && stats.questionsAnswered % 5 === 0) {
      getRecommendations();
    }
  }, [stats.questionsAnswered]);

  if (showPersonalization) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 p-8">
        <div className="max-w-2xl mx-auto">
          <div className="bg-white rounded-2xl shadow-xl p-8">
            <div className="flex items-center gap-3 mb-6">
              <Brain className="text-indigo-600" size={32} />
              <h1 className="text-3xl font-bold text-gray-800">AI Tutor</h1>
            </div>
            
            <div className="space-y-6">
              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  Your Name
                </label>
                <input
                  type="text"
                  value={student.name}
                  onChange={(e) => setStudent({...student, name: e.target.value})}
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                  placeholder="Enter your name"
                />
              </div>

              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  Current Level
                </label>
                <div className="grid grid-cols-3 gap-3">
                  {difficultyLevels.map(level => (
                    <button
                      key={level}
                      onClick={() => setStudent({...student, level})}
                      className={`px-4 py-2 rounded-lg font-medium transition-all ${
                        student.level === level
                          ? 'bg-indigo-600 text-white shadow-md'
                          : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                      }`}
                    >
                      {level.charAt(0).toUpperCase() + level.slice(1)}
                    </button>
                  ))}
                </div>
              </div>

              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  Subjects to Study
                </label>
                <div className="flex flex-wrap gap-2">
                  {subjects.map(subject => (
                    <button
                      key={subject}
                      onClick={() => {
                        const lower = subject.toLowerCase();
                        setStudent(prev => ({
                          ...prev,
                          subjects: prev.subjects.includes(lower)
                            ? prev.subjects.filter(s => s !== lower)
                            : [...prev.subjects, lower]
                        }));
                        if (!student.subjects.includes(lower)) {
                          setCurrentSubject(lower);
                        }
                      }}
                      className={`px-4 py-2 rounded-lg font-medium transition-all ${
                        student.subjects.includes(subject.toLowerCase())
                          ? 'bg-purple-600 text-white shadow-md'
                          : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                      }`}
                    >
                      {subject}
                    </button>
                  ))}
                </div>
              </div>

              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  Learning Pace
                </label>
                <div className="grid grid-cols-3 gap-3">
                  {['slow', 'moderate', 'fast'].map(pace => (
                    <button
                      key={pace}
                      onClick={() => setStudent({...student, learningPace: pace})}
                      className={`px-4 py-2 rounded-lg font-medium transition-all ${
                        student.learningPace === pace
                          ? 'bg-green-600 text-white shadow-md'
                          : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                      }`}
                    >
                      {pace.charAt(0).toUpperCase() + pace.slice(1)}
                    </button>
                  ))}
                </div>
              </div>

              <button
                onClick={startSession}
                className="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-indigo-700 hover:to-purple-700 transition-all shadow-lg flex items-center justify-center gap-2"
              >
                <Sparkles size={20} />
                Start Learning Session
              </button>
            </div>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 p-8">
      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <div className="bg-white rounded-2xl shadow-xl p-6 mb-6">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-3">
              <Brain className="text-indigo-600" size={32} />
              <div>
                <h1 className="text-2xl font-bold text-gray-800">Welcome, {student.name}!</h1>
                <p className="text-gray-600">Studying {currentSubject} â€¢ {student.level} level</p>
              </div>
            </div>
            <button
              onClick={() => setShowPersonalization(true)}
              className="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all"
            >
              Edit Profile
            </button>
          </div>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
          {/* Main Learning Area */}
          <div className="lg:col-span-2 space-y-6">
            {/* Stats Cards */}
            <div className="grid grid-cols-4 gap-4">
              <div className="bg-white rounded-xl shadow-md p-4">
                <div className="flex items-center gap-2 mb-2">
                  <Target className="text-blue-600" size={20} />
                  <span className="text-sm font-medium text-gray-600">Questions</span>
                </div>
                <p className="text-2xl font-bold text-gray-800">{stats.questionsAnswered}</p>
              </div>
              
              <div className="bg-white rounded-xl shadow-md p-4">
                <div className="flex items-center gap-2 mb-2">
                  <CheckCircle className="text-green-600" size={20} />
                  <span className="text-sm font-medium text-gray-600">Correct</span>
                </div>
                <p className="text-2xl font-bold text-gray-800">{stats.correctAnswers}</p>
              </div>
              
              <div className="bg-white rounded-xl shadow-md p-4">
                <div className="flex items-center gap-2 mb-2">
                  <Clock className="text-orange-600" size={20} />
                  <span className="text-sm font-medium text-gray-600">Avg Time</span>
                </div>
                <p className="text-2xl font-bold text-gray-800">{stats.averageTime}s</p>
              </div>
              
              <div className="bg-white rounded-xl shadow-md p-4">
                <div className="flex items-center gap-2 mb-2">
                  <Award className="text-purple-600" size={20} />
                  <span className="text-sm font-medium text-gray-600">Streak</span>
                </div>
                <p className="text-2xl font-bold text-gray-800">{stats.currentStreak}</p>
              </div>
            </div>

            {/* Question Area */}
            <div className="bg-white rounded-2xl shadow-xl p-8">
              {loading && !question ? (
                <div className="text-center py-12">
                  <div className="inline-block animate-spin rounded-full h-12 w-12 border-4 border-indigo-600 border-t-transparent"></div>
                  <p className="mt-4 text-gray-600">Generating personalized question...</p>
                </div>
              ) : question && !feedback ? (
                <div className="space-y-6">
                  <div className="flex items-center justify-between">
                    <span className={`px-3 py-1 rounded-full text-sm font-medium ${
                      question.difficulty === 'beginner' ? 'bg-green-100 text-green-700' :
                      question.difficulty === 'intermediate' ? 'bg-yellow-100 text-yellow-700' :
                      'bg-red-100 text-red-700'
                    }`}>
                      {question.difficulty}
                    </span>
                  </div>
                  
                  <div>
                    <h2 className="text-xl font-semibold text-gray-800 mb-4">{question.question}</h2>
                    <div className="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
                      <p className="text-sm text-gray-700">ðŸ’¡ Hint: {question.hint}</p>
                    </div>
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">
                      Your Answer
                    </label>
                    <input
                      type="text"
                      value={userAnswer}
                      onChange={(e) => setUserAnswer(e.target.value)}
                      onKeyPress={(e) => e.key === 'Enter' && submitAnswer()}
                      className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                      placeholder="Type your answer here..."
                      disabled={loading}
                    />
                  </div>

                  <button
                    onClick={submitAnswer}
                    disabled={loading || !userAnswer.trim()}
                    className="w-full bg-indigo-600 text-white py-3 rounded-lg font-semibold hover:bg-indigo-700 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2"
                  >
                    {loading ? (
                      <>
                        <div className="animate-spin rounded-full h-5 w-5 border-2 border-white border-t-transparent"></div>
                        Evaluating...
                      </>
                    ) : (
                      <>Submit Answer</>
                    )}
                  </button>
                </div>
              ) : feedback ? (
                <div className="space-y-6">
                  <div className={`p-6 rounded-xl ${
                    feedback.isCorrect ? 'bg-green-50 border-2 border-green-200' : 'bg-red-50 border-2 border-red-200'
                  }`}>
                    <div className="flex items-center gap-3 mb-3">
                      {feedback.isCorrect ? (
                        <CheckCircle className="text-green-600" size={32} />
                      ) : (
                        <XCircle className="text-red-600" size={32} />
                      )}
                      <h3 className="text-xl font-bold text-gray-800">
                        {feedback.isCorrect ? 'Excellent Work!' : 'Not Quite Right'}
                      </h3>
                    </div>
                    <p className="text-gray-700 mb-3">{feedback.feedback}</p>
                    {feedback.suggestion && (
                      <div className="bg-white bg-opacity-50 p-3 rounded-lg">
                        <p className="text-sm font-medium text-gray-700">ðŸ’¡ {feedback.suggestion}</p>
                      </div>
                    )}
                  </div>

                  <div className="bg-blue-50 p-6 rounded-xl">
                    <h4 className="font-semibold text-gray-800 mb-2">Explanation:</h4>
                    <p className="text-gray-700">{question.explanation}</p>
                    {!feedback.isCorrect && (
                      <p className="text-gray-700 mt-2">
                        <strong>Correct Answer:</strong> {question.correctAnswer}
                      </p>
                    )}
                  </div>

                  <button
                    onClick={generateQuestion}
                    className="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-indigo-700 hover:to-purple-700 transition-all shadow-lg"
                  >
                    Next Question â†’
                  </button>
                </div>
              ) : null}
            </div>
          </div>

          {/* Sidebar */}
          <div className="space-y-6">
            {/* Progress */}
            <div className="bg-white rounded-2xl shadow-xl p-6">
              <div className="flex items-center gap-2 mb-4">
                <TrendingUp className="text-indigo-600" size={24} />
                <h3 className="text-lg font-bold text-gray-800">Your Progress</h3>
              </div>
              
              {stats.questionsAnswered > 0 ? (
                <div className="space-y-4">
                  <div>
                    <div className="flex justify-between text-sm mb-2">
                      <span className="text-gray-600">Accuracy</span>
                      <span className="font-semibold text-gray-800">
                        {Math.round((stats.correctAnswers / stats.questionsAnswered) * 100)}%
                      </span>
                    </div>
                    <div className="w-full bg-gray-200 rounded-full h-3">
                      <div
                        className="bg-gradient-to-r from-green-500 to-emerald-500 h-3 rounded-full transition-all"
                        style={{ width: `${(stats.correctAnswers / stats.questionsAnswered) * 100}%` }}
                      ></div>
                    </div>
                  </div>
                  
                  <div className="pt-4 border-t border-gray-200">
                    <p className="text-sm text-gray-600 mb-2">Adaptive Level</p>
                    <div className="flex items-center gap-2">
                      <div className="flex-1 bg-gray-200 rounded-full h-2">
                        <div
                          className="bg-indigo-600 h-2 rounded-full transition-all"
                          style={{ 
                            width: student.level === 'beginner' ? '33%' : 
                                   student.level === 'intermediate' ? '66%' : '100%' 
                          }}
                        ></div>
                      </div>
                      <span className="text-sm font-semibold text-gray-700 capitalize">
                        {student.level}
                      </span>
                    </div>
                  </div>
                </div>
              ) : (
                <p className="text-sm text-gray-600">Start answering questions to track your progress!</p>
              )}
            </div>

            {/* Recommendations */}
            {recommendations.length > 0 && (
              <div className="bg-white rounded-2xl shadow-xl p-6">
                <div className="flex items-center gap-2 mb-4">
                  <BookOpen className="text-purple-600" size={24} />
                  <h3 className="text-lg font-bold text-gray-800">Recommended</h3>
                </div>
                
                <div className="space-y-3">
                  {recommendations.map((rec, idx) => (
                    <div key={idx} className="p-4 bg-gradient-to-br from-purple-50 to-indigo-50 rounded-lg border border-purple-100">
                      <div className="flex items-start gap-3">
                        <AlertCircle className="text-purple-600 mt-1" size={20} />
                        <div>
                          <h4 className="font-semibold text-gray-800 text-sm">{rec.title}</h4>
                          <p className="text-xs text-gray-600 mt-1">{rec.description}</p>
                          <span className="inline-block mt-2 px-2 py-1 bg-white rounded text-xs font-medium text-purple-700">
                            {rec.type}
                          </span>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Knowledge Gaps */}
            {student.weaknesses.length > 0 && (
              <div className="bg-white rounded-2xl shadow-xl p-6">
                <div className="flex items-center gap-2 mb-4">
                  <AlertCircle className="text-orange-600" size={24} />
                  <h3 className="text-lg font-bold text-gray-800">Focus Areas</h3>
                </div>
                
                <div className="space-y-2">
                  {student.weaknesses.map((weakness, idx) => (
                    <div key={idx} className="px-3 py-2 bg-orange-50 rounded-lg text-sm text-gray-700 border border-orange-100">
                      {weakness}
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
};

export default AITutor;
